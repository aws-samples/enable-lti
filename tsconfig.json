{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@enable-lti/util": ["packages/layers/util/src"],
      "@enable-lti/auth-proxy": ["packages/handlers/authorizerProxy/src"],
      "@enable-lti/deep-linking-proxy": ["packages/handlers/deepLinkingProxy/src"],
      "@enable-lti/score-submission": ["packages/handlers/scoreSubmission/src"],
      "@enable-lti/token-proxy": ["packages/handlers/tokenProxy/src"],
      "@enable-lti/*": ["packages/handlers/*/src"],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "packages/examples/client",
    "./build",
    "**/jest.config.ts"
  ]
}